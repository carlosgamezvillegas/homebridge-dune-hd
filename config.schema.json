{
  "pluginAlias": "duneHDPlugin",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "This plugin is provided by [carlosgamezvillegas](https://github.com/carlosgamezvillegas/)",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Dune HD"
      },
      "ip": {
        "title": "IP Address",
        "type": "string",
        "placeholders": "192.168.1.1",
        "required": true
      },
      "pollingInterval": {
        "title": "Polling Interval (milliseconds)",
        "type": "integer",
        "placeholders": "4000",
        "default": 4000,
        "minimum": 2000,
        "maximum": 60000,
        "required": false
      },
      "modelName": {
        "title": "Model",
        "type": "string",
        "placeholders": "Real Vision 4K",
        "required": false
      },
      "manufacturer": {
        "title": "Manufacturer",
        "type": "string",
        "placeholders": "Dune HD",
        "required": false
      },
      "serialN": {
        "title": "Serial Number",
        "type": "string",
        "placeholders": "EB1234213F",
        "required": false
      },
      "newPlatformUUID": {
        "title": "New Platform UUID",
        "type": "boolean",
        "required": false
      },
      "volume": {
        "title": "Add Volume service as a dimmer",
        "type": "boolean",
        "required": false
      },
      "mediaButtons": {
        "title": "Add Media Remote Control buttons (Next, Previous, Forward, Rewind)",
        "type": "boolean",
        "required": false
      },
      "movieControl": {
        "title": "Add Video/Song Progress as a dimmer",
        "type": "boolean",
